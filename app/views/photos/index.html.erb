<p id="notice"><%= notice %></p>

<%= link_to 'Back', {controller: "restaurants", action: "index"} %>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td style="display: none"><%= photo.restaurant_id %></td>
        <td><%= image_tag photo.photo.thumb.url %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', {controller: "photos", action: "new", restaurant_id: @restaurant_id } %>
