<p id="notice"><%= notice %></p>

<%= link_to 'Voltar', {controller: "restaurants", action: "index"}, class: "btn btn-default" %>

<h1>Fotos</h1>

<table class="table">
  <thead>
    <tr>
      <th style="display: none">Restaurant</th>
      <th>Foto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td style="display: none"><%= photo.restaurant_id %></td>
        <td><%= image_tag photo.photo.thumb.url %></td>
        <td><%= link_to 'Visualizar', photo, class:"btn btn-link" %></td>
        <td><%= link_to 'Excluir', photo, method: :delete, data: { confirm: 'Deseja mesmo excluir a foto?' }, class:"btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar foto', {controller: "photos", action: "new", restaurant_id: @restaurant_id }, class: "btn btn-primary" %>
